<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xiaoshq.sqltest.MainActivity">

    <ImageView
        android:id="@+id/icon_show"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon" />

    <TextView
        android:id="@+id/nameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:text="姓名:"
        android:textSize="17sp"
        app:layout_constraintLeft_toRightOf="@+id/icon_show"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sexTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="性别:"
        android:textSize="17sp"
        app:layout_constraintLeft_toRightOf="@+id/icon_show"
        app:layout_constraintTop_toBottomOf="@+id/nameTitle" />

    <TextView
        android:id="@+id/yearTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="生卒年:"
        android:textSize="17sp"
        app:layout_constraintLeft_toRightOf="@+id/icon_show"
        app:layout_constraintTop_toBottomOf="@+id/birthplaceTitle" />

    <TextView
        android:id="@+id/birthplaceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="籍贯:"
        android:textSize="17sp"
        app:layout_constraintLeft_toRightOf="@+id/icon_show"
        app:layout_constraintTop_toBottomOf="@+id/sexTitle" />

    <TextView
        android:id="@+id/infoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="简介："
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/icon_show"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="name"
        android:textSize="17sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/nameTitle"
        app:layout_constraintLeft_toRightOf="@+id/nameTitle" />

    <TextView
        android:id="@+id/sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="sex"
        android:textSize="17sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/sexTitle"
        app:layout_constraintLeft_toRightOf="@+id/sexTitle" />

    <TextView
        android:id="@+id/birthplace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="birthplace"
        android:textSize="17sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/birthplaceTitle"
        app:layout_constraintLeft_toRightOf="@+id/birthplaceTitle" />

    <TextView
        android:id="@+id/birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="birth"
        android:textSize="17sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/yearTitle"
        app:layout_constraintLeft_toRightOf="@+id/yearTitle" />

    <TextView
        android:id="@+id/master"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="infomation"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoTitle" />

    <Button
        android:id="@+id/like"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/like"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/edit" />

    <Button
        android:id="@+id/edit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/edit"
        app:layout_constraintLeft_toRightOf="@+id/like"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/delete"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp" />

    <Button
        android:id="@+id/delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/delete"
        android:layout_marginRight="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/edit" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/info_show_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:layout_marginRight="0dp"
        app:title="人物详情"
        app:titleTextColor="#FFFFFF"
        app:navigationIcon="@drawable/back"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/nameTitle"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintVertical_bias="0.785" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="~"
        android:textSize="17sp"
        app:layout_constraintLeft_toRightOf="@+id/birth"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/birth" />

    <TextView
        android:id="@+id/death"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="death"
        android:textSize="17sp"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView" />

</android.support.constraint.ConstraintLayout>
